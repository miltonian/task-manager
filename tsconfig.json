{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es2018",
      "lib": ["es2018", "esnext.array"],
      "noImplicitAny": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "src/*": ["./src/*"],
        "*": ["./node_modules/*", "./src/shared_types/*"]
      },
      "forceConsistentCasingInFileNames":true
    },
    "include": ["src/**/*"]
  }
  